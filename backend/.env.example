# Spring Boot Backend Environment Variables

# Database Configuration (Production)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=resume_review_db
DB_USER=resumeuser
DB_PASSWORD=change_me_in_production

# Spring Profiles
SPRING_PROFILES_ACTIVE=prod

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# Logging
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_RESUMEREVIEW=INFO
LOGGING_FILE_NAME=/var/log/resume-review/application.log

# Application Configuration
APP_FILE_UPLOAD_DIRECTORY=/var/uploads/resume-review/
APP_RESUME_MAX_FILE_SIZE=5242880

# CORS Configuration (for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Optional: Redis Caching (for future enhancement)
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional: Email Service (for future enhancement)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Optional: Job Board API Integration (for future enhancement)
JOB_BOARD_API_KEY=your_api_key_here
JOB_BOARD_API_URL=https://api.joboard.com

# Application Name
APP_NAME=Resume Review Backend
APP_VERSION=1.0.0
